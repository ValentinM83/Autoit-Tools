{
  "name": "autoit-tools",
  "displayName": "AutoIt Tools",
  "description": "Simplifying AutoIt3 development in Visual Studio Code",
  "author": {
    "name": "Valentin Mairesse"
  },
  "publisher": "valmrse",
  "icon": "images/logo.png",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/VALENTIN4real/Autoit-Tools"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "AutoIt Tools",
      "properties": {
        "autoit-tools.autoIt3HelpPath": {
          "type": "string",
          "default": "C:\\Program Files (x86)\\AutoIt3\\AutoIt3Help.exe",
          "description": "Path to AutoIt3Help.exe"
        },
        "autoit-tools.udfPaths": {
          "type": "array",
          "default": [],
          "description": "Liste des UDFs avec leur chemin CHM et leur préfixe",
          "items": {
            "type": "object",
            "properties": {
              "prefix": {
                "type": "string",
                "description": "Préfixe des fonctions de l'UDF (ex: '_WD_')"
              },
              "path": {
                "type": "string",
                "description": "Chemin complet vers le fichier CHM de l'UDF"
              }
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "autoit-tools.openAutoIt3Help",
        "title": "Open AutoIt3Help"
      }
    ],
    "keybindings": [
      {
        "command": "autoit-tools.openAutoIt3Help",
        "key": "ctrl+f1",
        "mac": "cmd+f1",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2"
  }
}
